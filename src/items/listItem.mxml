<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer	 xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100"
					contentBackgroundAlpha="0.9" autoDrawBackground="true">
	
	<s:HGroup left="0" right="0" top="0" bottom="0" verticalAlign="middle" contentBackgroundAlpha="0.5" paddingLeft="10">	
		<s:BitmapImage source="{data.source}"/>	
		<s:VGroup>
			<s:Label styleName="fontSize26" paddingLeft="15" text="{data.name}"  paddingBottom="3" backgroundAlpha="0.5"/>
			<s:Label styleName="fontSize20" paddingLeft="15" text="{data.brief}"  paddingTop="3" backgroundAlpha="0.5"/>	
		</s:VGroup>
		
	</s:HGroup>

</s:ItemRenderer>
